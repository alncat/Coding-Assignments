package model.ball;

import util.Dispatcher;

/**
 * Interface for strategies that updates a ball's properties.
 */
public interface IUpdateStrategy {
	
	/**
	 * Initialize the Update Strategy.
	 */
	public void init(Ball context);
	
	/**
	 * Update properties of a ball: location, velocity, radius, color, etc.
	 * @param		ball whose properties are updated.
	 */
	public void updateState(Ball context, Dispatcher dispatcher);

}
