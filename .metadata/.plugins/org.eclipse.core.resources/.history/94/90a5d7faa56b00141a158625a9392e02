package com.seanharger.chatapp.model.chatroom;

import java.net.Inet4Address;

import common.chatroom.IChatroomID;

public class ChatroomID implements IChatroomID {

  private static final long serialVersionUID = 2631838645808442211L;

  private Inet4Address address;
  private String name;
  private long time;

  /**
   * Constructor that setups the instance variables for a 
   * ChatroomID.
   * 
   * @param address: Inet4Address.
   * @param name: string that is the ChatroomID.
   */
  public ChatroomID(Inet4Address address, String name) {
    this.address = address;
    this.name = name;
    this.time = System.currentTimeMillis();
  }

  /**
   * Getter for the Inet4Address.
   * @return: Inet4Address.
   */
  public Inet4Address getAddress() {
    return address;
  }

  @Override
  public int hashCode() {
    System.out.println(name);
    System.out.println(address);
    System.out.println(time);
    return (int) (name.hashCode() + address.hashCode() + time);
  }

  @Override
  public String toString() {
    return name;
  }

  @Override
  public boolean equals(Object other) {
    if (other instanceof ChatroomID) {
      return equals((ChatroomID) other);
    }
    return false;
  }

  /**
   * Compares this ChatroomID with another ChatroomID.
   * 
   * @param other: ChatroomID that is being compared.
   * @return: true if the other matches this ChatroomID,
   *        otherwise false.
   */
  public boolean equals(ChatroomID other) {
    return name.equals(other.name) && time == other.time;
  }
}
